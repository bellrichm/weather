<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <GenerateFullPaths>true</GenerateFullPaths>
    <TargetFrameworks>netcoreapp2.1;net472</TargetFrameworks>
    <OutputType>Library</OutputType>
    <CodeAnalysisRuleSet>$(ProjectDir)..\StyleCop.Analyzers.ruleset</CodeAnalysisRuleSet>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <NoWarn>NU1603</NoWarn>
    <ProjectGuid>20D3B5C5-609C-4B4A-8B22-8AA2E8598100</ProjectGuid>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(TargetFramework)' == 'net472'">
    <DebugType>full</DebugType>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="DataAnnotationsValidator">
      <HintPath Condition=" '$(TargetFramework)' == 'net472'">..\net472\DataAnnotationsValidator.dll</HintPath>
      <HintPath Condition=" '$(TargetFramework)' == 'netcoreapp2.1'">..\netcoreapp2.1\DataAnnotationsValidator.dll</HintPath>
    </Reference>  
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.1'">
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.1.6" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore" Version="2.1.6" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.6.2" />
    <PackageReference Include="StyleCop" Version="5.0.0">
      <NoWarn>NU1701</NoWarn>
    </PackageReference>
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.0-beta009" PrivateAssets="All" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="System.ComponentModel.DataAnnotations"/>
  </ItemGroup>
</Project>